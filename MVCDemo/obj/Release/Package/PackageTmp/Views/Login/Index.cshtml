@model MVCDemo.Models.Login
@{
    ViewBag.Title = "Index";
}
@Html.Encode(ViewData["errormessage"])
 <div style='font-size:20px;font-weight:600; position:relative;left:40%;top:30%;border:3px;'>
<h2>请登录：</h2>
<h5>请输入正确的账号密码：</h5>
 </div>

@using (Html.BeginForm("Index","Home",FormMethod.Post)) {
    @Html.ValidationSummary(true)
    <fieldset>
        <div style='font-size:20px;font-weight:600; position:relative;left:40%;top:40%;border:3px;'>
        <legend>登陆界面</legend>

        <div class="editor-label">
            账号：
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.username)
            @Html.ValidationMessageFor(model => model.username)
        </div>

        <div class="editor-label">
            密码：
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.password)
            @Html.ValidationMessageFor(model => model.password)
        </div>
        <p>
            <input type="submit" value="登录" />
        </p>
        </div>
    </fieldset>
}

 <div style='font-size:20px;font-weight:600; position:relative;left:40%;top:50%;border:3px;'>
    @Html.ActionLink("没有账号？点击注册", "insert")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

